# Build stage
FROM openjdk:23-jdk AS build  # Use the correct JDK 23 image
WORKDIR /app
COPY . .
RUN chmod +x ./mvnw && ./mvnw clean package -DskipTests

# Runtime stage
FROM openjdk:23-jdk           # Match the same version
COPY --from=build /app/target/*.jar app.jar
ENTRYPOINT ["java", "-jar", "app.jar"]